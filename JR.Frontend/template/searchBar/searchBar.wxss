/* template/searchBar/searchBar.wxss */
/*关于搜索栏的属性*/
.search {
  width: 100%;
  margin: 10px 0 0 0;
  padding: 0 10px;
  background: white;
  justify-content: space-between;
  border-radius: 5px;
  box-shadow: 0 5px 20px #c0c0c0;
}
.search-input {
  padding: 8px 0 8px 10px; 
  width: 90%;
  font-size: 1rem;
}
.search-image {
  padding: 0;
  margin: 0;
}
.search-image image {
  width: 20px;
  height: 20px;
}