/* pages/me/publishMyArticle/publishMyArticle.wxss */
@import '/style/common.wxss';
/*本页面css属性*/

page {
  background-color: #efefef;
  font-size: 0.7rem;
}

.publisher {
  width: 100%;
}

.publisher-input {
  background-color: white;
  padding: 10px;
}

.publisher-input textarea{
  width: 100%;
  font-size: 0.8rem;
}

.publisher-photos {
  width: 100%;
  margin: 0 0 5px 0;
}
.publisher-photo {
  display: inline-block;
  width: 100px;
  height: 100px;
  margin: 2px;
}
.publisher-photo image {
  width: 100%;
  height: 100%;
}

.publisher-chooser {
  margin: 10px 0;
}

.publisher-chooser-text {
  margin: 0 0 10px 0;
}

.publisher-button {
  margin: 20px 0 0 0;
  width: 100%;
}

.publisher-button button {
  width: 90%;
  height: 40px;
  font-size: 1rem;
}