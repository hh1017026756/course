/* pages/me/me.wxss */
@import '/style/common.wxss';
@import '/template/publishBar/publishBar.wxss';

/*本页面css属性*/

.header {
  margin: 10px;
  width: 95%;
}

/*关于我的名片的属性*/

.card {
  display: flex;
  flex-direction: column;
  margin: 10px 0 0 0;
  padding: 10px;
}
.card__main {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.card__left {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border: 2px #ffffff solid;
  box-shadow: 0 0 25px #c4a966;
}
.card__right {
  margin: 0 0 0 20px;
  font-size: 0.8rem;
  line-height: 1.4rem;
}
.card__detail {
  display: flex;
  align-items: center;
}
.card__detail--wrapper {
  margin: 0 0 10px 0;
}
.card__name {
  display: inline-block;
  font-size: 1rem;
  font-weight: bold;
  color: #927912;
}
.card__medal {
  display: inline-block;
  margin: 0 0 0 5px;
  width: 20px;
  height: 20px;
}
.card__text {
  display: block;
  color: #927912;
}
.card__intro {
  font-size: 0.8rem;
  color: #927912;
}
.card__sendButton {
  margin: 5px 10px 10px 10px;
  border-radius: 5px;
}

/*关于更多和设置的属性*/
.panel {
  position: relative;
  width: 95%;
  margin: 20px 0;
  padding: 10px 0 0 0;
}
.panel__decorator {
  position: absolute;
  display: flex;
  align-items: center;
  top: 0;
  width: 50%;
  height: 20px;
  background-color: #edc681;
  border-radius: 20px;
  padding: 5px 10px;
  box-shadow: 0 0 10px #a0a0a0;
  left: -30%;
}
.panel__name {
  font-size: 0.8rem;
  color: #927912;
  font-weight: bold;
  margin-left: auto;
}
.panel__setting {
  padding: 10px 15px 5px 15px;
}
.panel__more {
  margin: 20px 0 0 0;
  padding: 5px 15px;
}

/* navigator*/

.navigator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0;
  box-sizing: border-box;
}

.navigator__text {
  font-size: 0.8rem;
  color: #927912;
}

.navigator__arrow {
  width: 0.6rem;
  height: 0.6rem;
}

/* CSS箭头*/

.arrow {
  content: " ";
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #a1a2a2;
  border-style: solid;
  transform: rotate(45deg);
  margin-top: -4px;
  top: 50%;
  right: 22px;
}

/*底部弹出层*/

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

.modal {
  padding: 20px 0;
  text-align: center;
}

.modal__button::after {
  border: none;
}

.modal__button {
  background-color: #fff;
  margin: 0;
  border: 0;
  padding: 0;
  line-height: initial;
  border-radius: 0;
}

.modal__left {
  display: inline-block;
  width: 50%;
}

.modal__right {
  display: inline-block;
  width: 50%;
  border-left: 1px gray solid;
}

.modal__image {
  display: block;
  margin: 0 auto;
  width: 40px;
  height: 40px;
}

.modal__text {
  font-size: 0.8rem;
}
